{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Shift",
  "version": "0.1.0",
  "identifier": "com.justinthomas.shift",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Shift",
        "width": 900,
        "height": 700,
        "minWidth": 900,
        "minHeight": 700,
        "maxWidth": 900,
        "maxHeight": 700,
        "resizable": false,
        "fullscreen": false,
        "visible": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/ffmpeg/ffmpeg",
      "resources/webp/webpmux",
      "resources/webp/dwebp"
    ]
  }
}
